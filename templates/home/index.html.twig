{% extends '/layout.html.twig' %}

{% block body %}

    <img class="w-100" src="build/fullsizeoutput.webp">

    <div class="greyBack mt-5 mb-5">
        <h2 class="ml-5">Je recherche : </h2>
        <div class="d-flex justify-content-around">
            <div class="buttonRole">
                <a class="btn btn-gold w-100" href="{{ path('search_role', {'role': 'ambassadeur'}) }}">Ambassadeur</a>
                <h3 class="mt-3 mb-3 w-100 text-center">Une marque, un style</h3>
            </div>
            <div class="buttonRole">
                <a class="btn btn-gold w-100" href="{{ path('search_role', {'role': 'createur'}) }}">Créateur</a>
                <h3 class="mt-3 mb-3 w-100 text-center">Un ambassadeur pour un créateur</h3>
            </div>
        </div>
    </div>

    <div class="ambassador mt-5 mb-5">
        <h1 class="m-5 show"> Nos Ambassadeurs</h1>
        <div class="container-fluid card-ambassador">
            <div class="row no-gutters">
                {% for ambassador in ambassadors %}
                <div class="card mb-5 col-5">
                    <div class="row no-gutters">
                        <div class="col-md-1 col-sm-12 mt-2" >
                            <i class="fas fa-star"></i>
                            <p>100</p>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="card-body">
                                <h5 class="card-title">{{ambassador.firstname}}</h5>
                                <p class="card-text">J'habite dans le {{ambassador.department.codeName}}</p>
                                <p class="card-text"><small class="text-muted">Je suis un {{ambassador.roles}}</small></p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <img src="{{ ambassador.picture }}" class="card-img" alt="Image">
                        </div>
                    </div>
                </div>
               {% endfor %}
        </div>
    </div>
{% endblock %}
