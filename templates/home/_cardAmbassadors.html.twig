{% block cardAmbassadors %}
        <h2 class="ml-3 mr-3 mb-5 mt-5 m-md-5 show"> Nos Ambassadeurs</h2>
        <div class="container-fluid card-ambassador">
            <div class="row no-gutters">
                {% for card in ambassadorCards %}
                    <div class="card mb-5 col-md-5 col-sm-12">
                        <div class="border-gold card-border">
                        <div class="row no-gutters">
                            <div class="col-md-1 col-sm-12 mt-2 ml-3">
                                <div class="star_home">
                                    <a href="{{ path('search_like', {'id' : card.id}) }}"
                                       class="btn btn-link js-like">
                                        <div class="col-md-1 col-sm-12 mt-2">
                                            <span class="js-likes">{{ card.followers | length }}</span>
                                            {% set class="far" %}
                                            {% if app.user %}
                                                {% for favorites in app.user.followedUsers %}
                                                    {% if card == favorites.userFavorite %}
                                                        {% set class="fas" %}
                                                    {% endif %}
                                                {% endfor %}
                                            {% endif %}
                                            <i class="{{ class }} fa-star"></i>
                                        </div>
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="card-body">
                                    <a href="{{ path('user_show', {'id': card.id}) }}">
                                        <h5 class="card-title">{{ card.firstname }}</h5>
                                        {% if card.department.codeName is defined %}
                                            <p class="card-text">J'habite dans le {{ card.department.codeName }}</p>
                                        {% endif %}
                                        <p class="card-text">
                                            <small class="text-muted">Je suis un {{ card.roleLabel }}</small>
                                        </p>
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-2 picture align-self-center py-3 ml-2">
                                <a href="{{ path('user_show', {'id': card.id}) }}">
                                    <img
                                            src="
                                            {% if card.picture is null %}
                                            {{ asset('build/placeholder_profil_grey.png') }}
                                            {% else %}
                                            {{ vich_uploader_asset(card, 'pictureFile') }}
                                            {% endif %}"
                                            class="card-img rounded-circle align-self-center ml-2" alt="Image">
                                </a>
                            </div>
                        </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
{% endblock %}
