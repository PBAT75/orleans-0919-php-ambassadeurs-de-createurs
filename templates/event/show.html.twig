{% extends 'layout_admin.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ event.id }}</td>
        </tr>
        <tr>
            <th>Place</th>
            <td>{{ event.place }}</td>
        </tr>
        <tr>
            <th>DateTime</th>
            <td>{{ event.dateTime ? event.dateTime|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ event.description }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_event_index') }}">back to list</a>

    <a href="{{ path('admin_event_edit', {'id': event.id}) }}">edit</a>

{{ include('event/admin_delete_form.html.twig') }}
{% endblock %}
