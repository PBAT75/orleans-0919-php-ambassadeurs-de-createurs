{% extends 'layout_admin.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center">Evénement</h1>

        <table class="table m-5 p-5">
            <tbody>
            <tr>
                <th>Marque</th>
                <td>{{ event.brand.name }}</td>
            </tr>
            <tr>
                <th>Créateur</th>
                <td>{{ event.brand.user.firstname }} {{ event.brand.user.lastname }}</td>
            </tr>
            <tr>
                <th>Ambassadeur</th>
                <td>{{ event.user.firstname }} {{ event.user.lastname }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ event.place }}</td>
            </tr>
            <tr>
                <th>Date et Heure</th>
                <td>{{ event.dateTime ? event.dateTime|date('d/m/Y à H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            </tbody>
        </table>
        <div class="d-flex flex-row justify-content-between">
            <a href="{{ path('brand_index') }}" class="btn btn-gold">Retour</a>

            {{ include('event/admin_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
