        <h1 class="text-center mt-3 mb-4">Modifier un événement</h1>
        <div class="border-gold p-4">
            {{ include('event/_form.html.twig', {'button_label': 'Update'}) }}
        </div>
        <div class="row justify-content-between">
            <div class="col col-lg-4">
