<form method="post" action="{{ path('admin_article_tag_delete', {'id': article_tag.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cette étiquette ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article_tag.id) }}">
    <button class="btn btn-dark m-5"><i class="far fa-times-circle"></i> Supprimer</button>
</form>
