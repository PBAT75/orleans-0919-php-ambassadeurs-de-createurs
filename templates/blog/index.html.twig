{% extends 'layout.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <div class="container-fluid pt-1 mb-5">
        <h1 class="text-center m-5">Les news</h1>
        <p class="text-center m-5 firstSentence">Rencontres, news, outils, tout ce dont vous avez besoin pour vous
            lancer dans la vente privée à domicile ...</p>
        <div class="row justify-content-center m-0">
            {% for blog in blogs|slice(0,9) %}
                {% if loop.first %}
                    <h2 class="col offset-1 oneArticle">A la une</h2>
                    <div class="row justify-content-center">
                        <div class="col-md-5 card-img-block">
                            <div class="card-img-block-top">
                                <img class="card-img-top " src="http://placeimg.com/640/360/any"
                                     alt="image de l'article {{ blog.title }}">
                            </div>
                        </div>
                        <div class="col-md-5 card profile-card-5 firstblog">
                            <div class="card-body">
                                <p class=" text-left my-4 textdate">
                                    {{ blog.date|localizeddate('short', 'none') }} -
                                    <span class="badge badge-pill badge-gold">{{ blog.articleTag.tag }}</span>
                                </p>
                                <h3 class="card-title firstArticleTitle mt-3">{{ blog.title }}</h3>
                                <p class="textFirstArticle mt-4">{{ blog.content|truncate(200,true)|raw }}</p>
                                <a href="{{ path('blog_show', {'slug': blog.slug}) }}" class="btn btn-gold mt-5">Voir l'article</a>
                            </div>
                        </div>
                        <h2 class="col offset-2 mb-5">Nos articles</h2>
                    </div>

                {% else %}
                    <div class="col-md-4 m-4 mb-5">
                        <div class="card-img-block">
                            <img class="card-img-top" src="http://placeimg.com/640/360/any"
                                 alt="image de l'article {{ blog.title }}">
                        </div>
                        <div class="card profile-card-5 card-block">
                            <div class="card-body">
                                <p class=" text-left mt-3 textdate">
                                    {{ blog.date|localizeddate('short', 'none') }} -
                                    <span class="badge badge-pill badge-gold">{{ blog.articleTag.tag }}</span>
                                </p>
                                <h5 class="card-title">{{ blog.title }}</h5>
                                <p class="">{{ blog.content|truncate(150,true)|raw }}</p>
                                <a href="{{ path('blog_show', {'slug': blog.slug}) }}" class="btn btn-gold">Voir l'article</a>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
