<form method="post" action="{{ path('admin_brand_delete', {'id': brand.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ brand.id) }}">
    <button class="btn btn-dark mt-5"><i class="far fa-times-circle"></i> Supprimer</button>
</form>
