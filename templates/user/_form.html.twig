{{ form_start(form) }}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
    {{ form_row(form.firstname) }}
    {{ form_row(form.lastname) }}
    {{ form_row(form.mail) }}
    {{ form_row(form.city) }}
    {{ form_row(form.role) }}
    {{ form_row(form.password) }}

<div class="d-flex">
    {{ form_widget(form.CGU) }}
    <span class="ml-1">
        {{ form_help(form.CGU) }}
    </span>
</div>
<div class="d-flex">
    {{ form_widget(form.CGV) }}
    <span class="ml-1">
    {{ form_help(form.CGV) }}
    </span>
</div>

<div class="d-flex justify-content-center">
    <button class="btn btn-gold">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}
