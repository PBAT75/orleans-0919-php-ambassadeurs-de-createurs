{% extends 'layout.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}

    <div class="container-xl container-lg container-fluid loginFormRequest p-5 mb-5 mt-5">
        <div class="card cardLogin">
            <h2 class="text-center p-3 homepageTitle m-2">Création de compte</h2>
            {{ form_start(form) }}
            <div class="form-group row mt-4">
                <div class="col-sm-2 col-form-label text-center m-2">
                    {{ form_label(form.firstname) }}
                </div>
                <div class="col-sm-8 form-control justify-content-center">
                    {{ form_widget(form.firstname, {'attr': {'class': 'form-request'}}) }}
                </div>
                <div class="col-sm-2 col-form-label text-center m-2">
                    {{ form_label(form.lastname) }}
                </div>
                <div class="col-sm-8 form-control justify-content-center">
                    {{ form_widget(form.lastname, {'attr': {'class': 'form-request'}}) }}
                </div>
                <div class="col-sm-2 col-form-label text-center m-2">
                    {{ form_label(form.mail) }}
                </div>
                <div class="col-sm-8 form-control justify-content-center">
                    {{ form_widget(form.mail, {'attr': {'class': 'form-request'}}) }}
                </div>
                <div class="col-sm-2 col-form-label text-center m-2">
                    {{ form_label(form.city) }}
                </div>
                <div class="col-sm-8 form-control justify-content-center">
                    {{ form_widget(form.city, {'attr': {'class': 'form-request'}}) }}
                </div>
                <div class="col-sm-2 col-form-label text-center m-2">
                    {{ form_label(form.role) }}
                </div>
                <div class="col-sm-8 form-control justify-content-center">
                    {{ form_widget(form.role) }}
                </div>
                <div class="col-sm-2 col-form-label text-center m-2">
                    {{ form_label(form.password.first) }}
                </div>
                <div class="col-sm-8 form-control justify-content-center">
                    {{ form_widget(form.password.first, {'attr': {'class': 'form-request'}}) }}
                </div>
                <div class="col-sm-2 col-form-label text-center m-2">
                    {{ form_label(form.password.second) }}
                </div>
                <div class="col-sm-8 form-control justify-content-center">
                    {{ form_widget(form.password.second, {'attr': {'class': 'form-request'}}) }}
                </div>

                <div class="d-flex ml-5 mt-2 cgu">
                    {{ form_widget(form.CGU) }}
                    <span class="ml-1 linkLabel">
                        {{ form_help(form.CGU) }}
                    </span>
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <button class="btn btn-gold" type="submit">S'enregistrer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container-fluid blockSubscribe">
    <h1 class="mt-3 mb-4 text-center">Créer un compte</h1>
    <div class="row justify-content-around">

    <div class="col-xl-5 col-lg-5 col-md-10 col-12 mx-4 text-center mb-5">
    <img src="{{ asset('build/creer-un-compte.jpg') }}" alt="image de créateurs" class="img-new-user">
    </div>

    <div class="col-xl-6 col-lg-6 col-md-11 col-11 border-gold p-4 mx-5 mb-5">
    {{ include('user/_form.html.twig') }}
    </div>

    </div>
    </div>
{% endblock %}
