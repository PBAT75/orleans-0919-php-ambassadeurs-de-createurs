{% extends 'layout.html.twig' %}

{% block title %}Recherche des {{ role }}s{% endblock %}

{% block body %}
    <h1 class="text-center"> Recherche des {{ role }}s </h1>
    <div class="container-fluid card-search">

        {% include 'search/_filter.html.twig' with {form: form} only %}


        <div class="row justify-content-center">
            {% for user in users %}
                <div class="card col-10 col-md-4 col-lg-3 col-xl-2 m-5 p-0">
                    <img src="{{ user.picture }}" class="card-img-top" alt="image de {{ user.firstname }}">

                    <div class="card-body">
                        <div class="star mb-4">
                            <a href="{{ path('search_like', {'id' : user.id}) }}" class="btn btn-link js-like">
                                <div class="col-md-1 col-sm-12 mt-2">
                                    <span class="js-likes">{{ user.followers | length }}</span>
                                    {% set class="far" %}
                                    {% if app.user %}
                                    {% for favorites in app.user.followedUsers %}
                                        {% if user == favorites.userFavorite %}
                                            {% set class="fas" %}
                                        {% endif %}
                                    {% endfor %}
                                    {% endif %}
                                    <i class="{{ class }} fa-star ml-2"></i>
                                </div>
                            </a>
                        </div>
                        <h2 class="card-text text-handscript mb-3">{{ user.firstname }}</h2>
                        <p class="card-text"><i class="fas fa-map-marker-alt primary-color"></i> {{ user.city }}
                            ({{ user.department.code }})</p>
                        <hr>
                        <p class="card-text">Vendeur / HÃ´te</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('favorite') }}
{% endblock %}
