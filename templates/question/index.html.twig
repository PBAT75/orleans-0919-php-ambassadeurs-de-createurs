{% extends 'layout.html.twig' %}

{% block title %}FAQ{% endblock %}

{% block body %}
    <h1 class="text-center">Foire aux questions</h1>

    {% for category in categories %}
        <h2 class="ml-5">{{ category.category }}</h2>
        <div class="accordion m-5" id="accordionExample{{ loop.index }}">
            {% for question in questions %}
                {% if question.category == category %}
                    <div class="card">
                        <div class="card-header" id="heading{{- loop.index -}}">
                            <h3 class="mb-0">
                                <button class="btn btn-link collapsed question w-100 text-left flex d-flex justify-content-between"
                                        type="button" data-toggle="collapse" data-target="#collapse{{- loop.index -}}"
                                        aria-expanded="true" aria-controls="collapse{{- loop.index -}}">
                                    {{ question.question }}
                                    <i class="fas fa-caret-down"></i>
                                </button>

                            </h3>
                        </div>
                        <div id="collapse{{- loop.index -}}" class="collapse" aria-labelledby="heading{{- loop.index -}}" data-parent="#accordionExample{{ loop.parent.loop.index }}">
                            <div class="card-body text-left answer">
                                {{ question.answer }}
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% endfor %}

{% endblock %}
