{% extends 'layout_admin.html.twig' %}

{% block title %}{{ question.question }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center m-5">{{ question.question }}</h1>

        <table class="table w-100">
            <tbody>
            <tr>
                <th>Question</th>
                <td class="text-center">{{ question.question }}</td>
            </tr>
            <tr>
                <th>Cat√©gorie</th>
                <td class="text-center">{{ question.category.category }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ question.answer|raw }}</td>
            </tr>
            </tbody>
        </table>
        <div class="row justify-content-between">
            <div class="col col-lg-4">
                <a class="btn btn-dark m-5" href="{{ path('admin_question_index') }}">
                    <i class="far fa-arrow-alt-circle-left"></i> Liste des questions
                </a>
            </div>
            <div class="col col-lg-4">
                <a class="btn btn-dark m-5" href="{{ path('admin_question_edit', {'id': question.id}) }}">
                    <i class="fas fa-pencil-alt"></i> Modifier
                </a>
            </div>
        </div>
    </div>
{% endblock %}
