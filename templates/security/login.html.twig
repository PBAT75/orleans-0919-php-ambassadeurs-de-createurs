{% extends 'layout.html.twig' %}

{% block title %}S'identifier{% endblock %}
{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="container-xl container-lg container-fluid loginForm">
        <h1 class="mt-5 mb-5 text-center">Identifiez-vous</h1>
        <div class="border-gold p-4">
            <label for="inputMail">Email</label>
            <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control" required autofocus>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="d-flex justify-content-center">
            <button class="btn btn-gold mt-4" type="submit">S'identifier</button>
            </div>
        </div>
    </div>
</form>
    <p>
        <a href="{{path('request_resetting')}}">Mot de passe oubli√© ?</a>
    </p>
{% endblock %}
